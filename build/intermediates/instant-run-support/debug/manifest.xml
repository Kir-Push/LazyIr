<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.buhalo.lazyir"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="23"
        android:targetSdkVersion="25" />

    <uses-permission android:name="android.permission.TRANSMIT_IR" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_MULTICAST_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <uses-permission-sdk-23
        android:name="string"
        android:maxSdkVersion="23" />

    <uses-feature android:name="android.hardware.ConsumerIrManager" />

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <application
        android:name="com.example.buhalo.lazyir.AppBoot"
        android:allowBackup="true"
        android:icon="@mipmap/myapp"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/baba" >
        <activity
            android:name="com.example.buhalo.lazyir.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/baba" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.buhalo.lazyir.modules.shareManager.ShareActivity"
            android:label="@string/app_name"
            android:parentActivityName="com.example.buhalo.lazyir.MainActivity"
            android:theme="@style/baba" >
        </activity>
        <activity
            android:name="com.example.buhalo.lazyir.modules.SendIr.IrActivity"
            android:label="@string/app_name"
            android:parentActivityName="com.example.buhalo.lazyir.MainActivity"
            android:theme="@style/baba" >
        </activity>
        <activity
            android:name="com.example.buhalo.lazyir.modules.SendCommand.CommandActivity"
            android:label="@string/app_name"
            android:parentActivityName="com.example.buhalo.lazyir.MainActivity"
            android:theme="@style/baba" >
        </activity>
        <activity
            android:name="com.example.buhalo.lazyir.modules.dbus.MediaRemoteActivity"
            android:label="@string/app_name"
            android:parentActivityName="com.example.buhalo.lazyir.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>

        <service
            android:name="com.example.buhalo.lazyir.service.BackgroundService"
            android:enabled="true" />
        <!-- <service android:name=".service.SheluderService" -->
        <!-- android:permission="android.permission.BIND_JOB_SERVICE"/> -->

        <receiver android:name="com.example.buhalo.lazyir.service.JasechBroadcastReceiver" >

            <!-- <intent-filter> -->
            <!-- <action android:name="android.net.wifi.WIFI_STATE_CHANGED" /> -->
            <!-- </intent-filter> -->
            <intent-filter>
                <action android:name="android.net.wifi.supplicant.STATE_CHANGE" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.PHONE_STATE" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <service
            android:name="com.example.buhalo.lazyir.service.NotificationListener"
            android:enabled="true"
            android:label="@string/NotificationListen"
            android:permission="android.permission.BIND_NOTIFICATION_LISTENER_SERVICE" >
            <intent-filter>
                <action android:name="android.service.notification.NotificationListenerService" />
            </intent-filter>
        </service>

        <provider
            android:name="com.android.tools.fd.runtime.InstantRunContentProvider"
            android:authorities="com.example.buhalo.lazyir.com.android.tools.fd.runtime.InstantRunContentProvider"
            android:multiprocess="true" />
    </application>

</manifest>
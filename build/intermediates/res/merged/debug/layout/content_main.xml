<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/dada"
    android:orientation="vertical">

    <Button
        android:text="AUDIO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button2"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="21dp"
        android:onClick="processOnlyAudio"
        android:id="@+id/button3" />

    <Button
        android:text="TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="43dp"
        android:layout_marginTop="118dp"
        android:id="@+id/button2"
        android:onClick="processOnlyTv"
        android:layout_alignParentStart="true" />


    <Button
        android:text="PC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:onClick="processOnlyPc"
        android:layout_alignStart="@+id/button"
        android:layout_marginTop="23dp"
        android:id="@+id/PC" />

    <Button
        android:text="TV-AUDIO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:onClick="processClickButton"
        android:layout_marginBottom="96dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="VOLDOWN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button8"
        android:onClick="processOnlyVolumeDown"
        android:layout_alignBottom="@+id/button"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="21dp" />

    <Button
        android:text="VolumeUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button7"
        android:onClick="processOnlyVolumeUp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>

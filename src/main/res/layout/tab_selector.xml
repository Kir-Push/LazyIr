<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tabSelectTab">

    <Button
        android:layout_height="60dp"
        android:layout_marginStart="35dp"
        android:id="@+id/button"
        android:background="@mipmap/andrr"
        android:tag="@mipmap/andrr"
        android:layout_alignParentStart="true"
        android:layout_marginTop="84dp"
        android:layout_width="60dp"
        android:scaleX="1"
        android:scaleY="1"/>

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/button"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="71dp"
        android:id="@+id/hzbtn"
        android:tag="@mipmap/irbtn"
        android:background="@mipmap/irbtn"
        android:scaleX="1"
        android:scaleY="1"/>

    <Button
        android:id="@+id/file_icn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/button"
        android:layout_marginStart="29dp"
        android:layout_marginTop="47dp"
        android:tag="@mipmap/file_icn"
        android:background="@mipmap/file_icn" />

    <Button
        android:id="@+id/folder_icn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignEnd="@+id/hzbtn"
        android:layout_alignTop="@+id/file_icn"
        android:layout_marginEnd="15dp"
        android:tag="@mipmap/folder_icn"
        android:background="@mipmap/folder_icn" />


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fr_pg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--<ImageButton-->
        <!--android:layout_width="20dp"-->
        <!--android:layout_height="20dp"-->
        <!--app:srcCompat="@drawable/btn_close"-->
        <!--android:layout_alignParentTop="true"-->
        <!--android:layout_alignParentEnd="true"-->
        <!--android:layout_marginEnd="128dp"-->
        <!--android:layout_marginTop="62dp"-->
        <!--android:id="@+id/imageButton2" />-->

    <ImageButton
        android:contentDescription="@string/removebtn"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:src="@drawable/btn_close"
        android:id="@+id/imageButton4"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <android.support.constraint.ConstraintLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:weightSum="1"
        android:id="@+id/command_set_layout"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/const_bt_add_cmd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/command_set_layout"
            android:layout_marginBottom="28dp"
            android:layout_marginRight="16dp"
            android:text="@string/commands"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/const_bt_rmv"
            app:layout_constraintRight_toLeftOf="@+id/button_command_list" />

        <Button
            android:id="@+id/cnts_btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="18dp"
            android:text="@string/cntxMenuOk"
            app:layout_constraintRight_toLeftOf="@+id/button_command_list"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/const_bt_rmv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/command_set_layout"
            android:layout_marginRight="16dp"
            android:text="@string/cntxMenuDelete"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/button_command_list" />

        <ListView
            android:id="@+id/button_command_list"
            android:layout_width="260dp"
            android:layout_height="200dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="-79dp"
            android:layout_marginTop="0dp"
            android:background="@color/colorAccent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

</RelativeLayout>
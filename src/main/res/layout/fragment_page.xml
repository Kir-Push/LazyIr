<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fr_pg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--<ImageButton-->
        <!--android:layout_width="20dp"-->
        <!--android:layout_height="20dp"-->
        <!--app:srcCompat="@drawable/btn_close"-->
        <!--android:layout_alignParentTop="true"-->
        <!--android:layout_alignParentEnd="true"-->
        <!--android:layout_marginEnd="128dp"-->
        <!--android:layout_marginTop="62dp"-->
        <!--android:id="@+id/imageButton2" />-->

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:src="@drawable/btn_close"
        android:id="@+id/imageButton4"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <android.support.constraint.ConstraintLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:weightSum="1"
        android:id="@+id/command_set_layout"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <Button
            android:text="OK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cnts_btn_ok"
            app:layout_constraintBottom_toTopOf="@+id/const_bt_add"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@+id/all_comand_list"
            app:layout_constraintRight_toLeftOf="@+id/button_command_list"
            android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.61" />

        <Button
            android:text="Add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/const_bt_add"
            android:layout_alignTop="@+id/command_set_layout"
            android:layout_alignParentEnd="true"
            app:layout_constraintRight_toLeftOf="@+id/button_command_list"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@+id/all_comand_list"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/const_bt_rmv"
            app:layout_constraintVertical_bias="0.96"
            app:layout_constraintHorizontal_bias="0.61" />

        <Button
            android:text="Delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/const_bt_rmv"
            android:layout_alignTop="@+id/command_set_layout"
            android:layout_alignParentEnd="true"
            app:layout_constraintRight_toLeftOf="@+id/button_command_list"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@+id/all_comand_list"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="24dp"
            app:layout_constraintHorizontal_bias="0.58" />

        <ListView
            android:layout_height="200dp"
            android:id="@+id/button_command_list"
            android:layout_alignParentEnd="true"
            android:layout_width="140dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/colorAccent" />

        <ListView
            android:layout_height="200dp"
            android:layout_alignTop="@+id/command_set_layout"
            android:layout_alignParentStart="true"
            tools:layout_editor_absoluteY="0dp"
            android:id="@+id/all_comand_list"
            tools:ignore="MissingConstraints"
            android:layout_width="120dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@color/colorAccent" />

    </android.support.constraint.ConstraintLayout>

</RelativeLayout>
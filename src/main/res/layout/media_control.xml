<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/trackName"
        android:layout_width="336dp"
        android:layout_height="40dp"
        android:ems="10"
        android:text="Name"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/spinner"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="324dp"
        android:layout_height="29dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <SeekBar
        android:id="@+id/timeLine"
        android:layout_width="324dp"
        android:layout_height="32dp"
        android:layout_marginTop="64dp"
        app:layout_constraintTop_toBottomOf="@+id/playButton"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/playButton"
        android:layout_width="93dp"
        android:layout_height="86dp"
        android:background="@mipmap/play_btn"
        android:layout_marginTop="34dp"
        app:layout_constraintTop_toBottomOf="@+id/trackName"
        app:layout_constraintRight_toLeftOf="@+id/nextBtn"
        app:layout_constraintLeft_toRightOf="@+id/prewBtn" />

    <Button
        android:id="@+id/prewBtn"
        android:layout_width="0dp"
        android:layout_height="86dp"
        android:background="@mipmap/left_btn"
        android:layout_marginTop="34dp"
        app:layout_constraintTop_toBottomOf="@+id/trackName"
        android:layout_marginLeft="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="25dp" />

    <Button
        android:id="@+id/nextBtn"
        android:layout_width="93dp"
        android:layout_height="86dp"
        android:background="@mipmap/right_btn"
        android:layout_marginTop="34dp"
        app:layout_constraintTop_toBottomOf="@+id/trackName"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/prewBtn" />

    <LinearLayout
        android:id="@+id/volume_lin"
        android:layout_width="148dp"
        android:layout_height="38dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:rotation="270"
        app:layout_constraintBottom_toTopOf="@+id/timeLine"
        app:layout_constraintLeft_toRightOf="@+id/nextBtn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trackName"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintVertical_bias="0.507">

        <SeekBar
            android:id="@+id/volume_bar"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:max="100"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/lenght_text"
        android:layout_width="91dp"
        android:layout_height="27dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/timeLine"
        android:layout_marginLeft="64dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.501" />

</android.support.constraint.ConstraintLayout>